<form method="post" action="/registerComplaint">
  <h2>Register a Complaint</h2>

  <!-- Flash Messages for Error or Success -->
  {{#if errors}}
    {{#each errors}}
      <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
  {{/if}}

  <!-- Name Input -->
  <div class="form-group">
    <label for="name">Name</label>
    <input
      class="form-control"
      type="text"
      name="name"
      id="name"
      placeholder="Name"
      required
    />
  </div>

  <!-- Email Input -->
  <div class="form-group">
    <label for="email">Email</label>
    <input
      class="form-control"
      type="email"
      name="email"
      id="email"
      placeholder="Email"
      required
    />
  </div>

  <!-- Contact Input -->
  <div class="form-group">
    <label for="contact">Contact Number</label>
    <input
      class="form-control"
      type="text"
      name="contact"
      id="contact"
      placeholder="Phone Number"
      required
    />
  </div>

  <!-- Description Textarea -->
  <div class="form-group">
    <label for="desc">Description</label>
    <textarea
      class="form-control"
      name="desc"
      id="desc"
      cols="30"
      rows="10"
      placeholder="Enter the Description"
      required
    ></textarea>
  </div>

  <!-- Submit Button -->
  <button class="btn btn-success" type="submit">Submit Complaint</button>

  <!-- Back Link -->
  <br /><br />
  Wanna change your mind?
  <a class="btn btn-warning btn-sm" href="/">Back</a>
  <br /><br />
</form>

